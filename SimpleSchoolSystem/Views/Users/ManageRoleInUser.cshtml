@model List<SimpleSchoolSystem.ServicesLayer.Dto.User.ManageRoleInUserViewModel>


@{
    var userId = ViewBag.Userid;
}
<form method="post" asp-route-roleId="@userId">
    <div class=" card">
        <div class=" card-header">
            <h2>update </h2>
        </div>
        <div class="card-body">
            
            @for (int i=0; i< Model.Count();i++)
            {
                <div class="form-check">
                    <input type="hidden" asp-for="@Model[i].RoleId" class="from-check-input"/>
                    <input type="hidden" asp-for="@Model[i].RoleName" class="from-check-input"/>
                    <input asp-for="@Model[i].IsSelected" class="from-check-input" />
                    <label asp-for="@Model[i].IsSelected" class="from-check-input">
                        @Model[i].RoleName
                    </label>
                </div>

            }
            <div asp-validation-summary="All" class="text-danger"></div>

       
    </div>
    <div class="form-group">
            <input type="submit" value="Done" class="btn btn-primary mb-3 " />
    </div>
    </div>
</form>

